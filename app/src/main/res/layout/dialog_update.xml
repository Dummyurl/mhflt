<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="22dp">


    <TextView
        android:id="@+id/tv_title"
        style="@style/text_16sp_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="15dp"
        android:text="发现新版本3.17.0"
        android:textStyle="bold" />

    <View style="@style/bg_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingEnd="18dp"
        android:paddingStart="18dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_content"
            style="@style/text_14sp_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="返利投APP新版本上线啦：新增手势密码，保证账户安全；基金强势回归，资产配置更多元；更多多重活动，马上更新吧！" />

        <LinearLayout
            android:id="@+id/layout_update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress"
                style="@style/RedProgressBar"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <TextView
                android:id="@+id/tv_update_info"
                style="@style/text_14sp_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center" />
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/shape_tag_gray"
            android:gravity="center"
            android:text="退出"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_later_update"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/shape_tag_blue"
            android:gravity="center"
            android:text="稍后再说"
            android:textColor="@color/colorTextBlue"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_update_now"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/selector_btn_update"
            android:gravity="center"
            android:text="现在升级"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>