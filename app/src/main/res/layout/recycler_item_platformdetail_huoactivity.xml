<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_btn_pressed"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_img_url"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/bid_name"
        style="@style/text_14sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动：活动介绍活动介绍"
        android:layout_alignTop="@id/product_img_url"
        android:layout_toRightOf="@id/product_img_url"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/sub_name"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相当于年化收益8.88%"
        android:layout_alignBottom="@id/product_img_url"
        android:layout_toRightOf="@id/product_img_url"
        android:layout_marginBottom="4dp" />

    <View
        style="@style/bg_line"
        android:layout_below="@id/product_img_url" />

</RelativeLayout>