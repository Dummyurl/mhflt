<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="11dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/my_fund_trade_record_fund_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/text_14sp_gray" />

            <TextView
                android:id="@+id/my_fund_trade_record_money"
                android:layout_alignParentRight="true"
                style="@style/text_14sp_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/my_fund_trade_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_12sp_gray2"/>

            <TextView
                android:id="@+id/my_fund_trade_record_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


    <View
        android:id="@+id/line"
        style="@style/bg_line"
        android:layout_marginTop="11dp" />

</LinearLayout>