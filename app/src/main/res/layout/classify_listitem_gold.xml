<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/name"
                    style="@style/text_14sp_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----------------------------------------"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="60dp"
                    android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tag_list_newer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/shape_tag_red"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="新"
                        android:textColor="@color/progress_red"
                        android:textSize="10sp"/>

                    <!--<TextView-->
                        <!--android:id="@+id/tag_list_dayback"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="6dp"-->
                        <!--android:background="@drawable/shape_tag_yellow"-->
                        <!--android:paddingLeft="4dp"-->
                        <!--android:paddingRight="4dp"-->
                        <!--android:paddingTop="2dp"-->
                        <!--android:paddingBottom="2dp"-->
                        <!--android:text="返"-->
                        <!--android:textColor="@color/colorTextYellow"-->
                        <!--android:textSize="12sp"-->
                        <!--android:visibility="gone"/>-->
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/interest_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/head">

                <TextView
                    android:id="@+id/interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="@color/chart_orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/year_income"
                    android:text="%"
                    android:textColor="@color/chart_orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/platform_bonus_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/plus"
                    android:text=" + 1"
                    android:textColor="@color/chart_orange"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/year_more_income"
                    android:layout_toRightOf="@+id/year_more_income"
                    android:text="%"
                    android:textColor="@color/chart_orange"
                    android:textSize="12sp" />
            </LinearLayout>

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_10sp_gray2"
                    android:text="年化收益"
                    android:layout_marginTop="10dp"
                    android:layout_alignLeft="@+id/interest_group"
                    android:layout_below="@+id/interest_group"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_10sp_gray2"
                    android:text="返利"
                    android:layout_marginTop="10dp"
                    android:layout_alignRight="@+id/interest_group"
                    android:layout_below="@+id/interest_group"
                    android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            style="@style/bg_line_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/platform_logo_app_square"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/duration_plus_duration_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="30天"
                style="@style/text_14sp_gray"/>

            <TextView
                android:id="@+id/product_duration"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:text="产品期限"
                style="@style/text_10sp_gray2"/>
        </LinearLayout>


    </LinearLayout>
    <View
        style="@style/bg_line"/>
</RelativeLayout>
