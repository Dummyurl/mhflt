<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_item_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/point_1"
                style="@style/ovalReadStyle" />

            <TextView
                android:id="@+id/text_1"
                style="@style/PlatformTextStyle"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/number_1"
                style="@style/PlatformTextStyleRedText"
                android:textColor="@color/colorTextRed" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_item_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/point_2"
                style="@style/ovalReadStyle" />

            <TextView
                android:id="@+id/text_2"
                style="@style/PlatformTextStyle"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/number_2"
                style="@style/PlatformTextStyleRedText"
                android:textColor="@color/colorTextRed" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/point_3"
                style="@style/ovalReadStyle" />

            <TextView
                android:id="@+id/text_3"
                style="@style/PlatformTextStyle"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/number_3"
                style="@style/PlatformTextStyleRedText"
                android:textColor="@color/colorTextRed" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/layout_item_4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/point_4"
                style="@style/ovalReadStyle" />

            <TextView
                android:id="@+id/text_4"
                style="@style/PlatformTextStyle"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/number_4"
                style="@style/PlatformTextStyleRedText"
                android:textColor="@color/colorTextRed" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_red_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:ellipsize="none"
        android:gravity="start"
        android:singleLine="true"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        android:textColor="@color/colorTextRed" />

</FrameLayout>