<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_btn_pressed"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_img_url"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_margin="14dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/product_img_url"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bid_name"
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:singleLine="true"

            android:text="标的名称" />

        <TextView
            android:id="@+id/sub_name"
            style="@style/text_12sp_gray"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标的的副标题" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:text="80"
                android:textSize="12sp"
                android:padding="2dp"
                android:textColor="@color/colorTextYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_toRightOf="@id/price"
                android:text="元起"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bonus_interest"
                android:text="返50%"
                android:textSize="12sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorTextYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tag_yellow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_below="@id/product_img_url"
        style="@style/bg_line"/>

</RelativeLayout>