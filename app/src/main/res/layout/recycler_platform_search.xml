<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">
    <View
        style="@style/bg_line"
        android:id="@+id/line"/>
    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/iv_platform_logo"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_14sp_black"
        android:id="@+id/tv_platform_name"
        android:layout_toEndOf="@+id/iv_platform_logo"
        android:layout_alignTop="@+id/iv_platform_logo"
        android:layout_alignBottom="@+id/iv_platform_logo"
        android:layout_marginStart="15dp"
        android:gravity="center"/>


</RelativeLayout>