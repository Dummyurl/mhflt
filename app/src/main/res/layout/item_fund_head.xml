<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/unit_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                style="@style/text_16sp_black"/>

            <TextView
                android:id="@+id/unit_nav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unit_nav"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                style="@style/text_10sp_gray2"/>
        </RelativeLayout>

        <View style="@style/bg_line_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/day_gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                style="@style/text_16sp_black"/>

            <TextView
                android:id="@+id/day_gr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_gr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                style="@style/text_10sp_gray2"/>
        </RelativeLayout>

        <View style="@style/bg_line_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invest_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                style="@style/text_12sp_black"/>

            <TextView
                android:id="@+id/fund_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invest_risk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                style="@style/text_12sp_black"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/colorBackground"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_fund_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        app:tabBackground="@drawable/bg_title_bar_line"
        app:tabIndicatorColor="@color/progress_red"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/progress_red"
        app:tabTextColor="@color/colorTextSecondary" />

</LinearLayout>