<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/current_layout_root"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/img_url"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_url"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/platform_name_plus_name"
                style="@style/text_12sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:text="---合盘贷款---" />

            <TextView
                android:id="@+id/current_price"
                style="@style/text_10sp_gray2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="---金价---" />

            <RelativeLayout
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/t2"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/bid_interest_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="11.0"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/chart_orange"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/bonus_interest_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bid_interest_gold"
                    android:text="+2%"
                    android:layout_marginBottom="3dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/chart_orange"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/gold_fanli_flag"
                    android:layout_above="@id/bonus_interest_gold"
                    android:layout_alignRight="@+id/bonus_interest_gold"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年化收益"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                style="@style/text_10sp_gray2"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/text_10sp_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="毫克起投"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/text_10sp_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="免手续费"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/text_10sp_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="全天交易"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/invest_know"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:text="定期金" />

    <View
        android:id="@+id/line_know"
        style="@style/bg_line"/>
    
</LinearLayout>