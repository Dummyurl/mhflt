<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/current_layout_root2"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/img_url"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_url"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/platform_name_plus_name"
                style="@style/text_12sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:text="---合盘贷款---" />

            <TextView
                android:id="@+id/current_price"
                style="@style/text_10sp_gray2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="---金价---" />

            <RelativeLayout
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/t2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/bid_interest_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:text="11.0 "
                    android:textColor="@color/chart_orange"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/bonus_interest_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/bid_interest_gold"
                    android:text="+ 2%"
                    android:textColor="@color/chart_orange"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_above="@id/bonus_interest_gold"
                    android:layout_alignRight="@+id/bonus_interest_gold"
                    android:src="@mipmap/gold_fanli_flag" />
            </RelativeLayout>

            <TextView
                style="@style/text_10sp_gray2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="年化收益" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    style="@style/text_10sp_gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1元起投" />

                <TextView
                    style="@style/text_10sp_gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="免买入费" />

                <TextView
                    style="@style/text_10sp_gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="全天交易" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:id="@+id/new_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_pressed"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/platform_name"
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="15dp"
            android:text="---" />

        <View style="@style/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/now_gold_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:textColor="@color/chart_orange"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 元/克"
                        android:textColor="@color/chart_orange"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/now_gold_price_text"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="10dp"
                    android:text="专享金价" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/year_income_text"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="44dp"
                    android:text="年化返利 " />

                <TextView
                    android:id="@+id/bid_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/year_income_text"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/year_income_text"
                    android:text="--"
                    android:textColor="@color/chart_orange"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/yellowfanli_l"
                    android:layout_above="@+id/bid_interest"
                    android:layout_toRightOf="@+id/bid_interest"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/invest_qixian_text"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/year_income_text"
                    android:layout_marginTop="10dp"
                    android:text="投资期限" />

                <TextView
                    android:id="@+id/invest_qixian"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/invest_qixian_text"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/invest_qixian_text"
                    android:text="90天" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:id="@+id/tejia_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_pressed"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/platform_name2"
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="15dp"
            android:text="---" />

        <View style="@style/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/now_gold_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:textColor="@color/chart_orange"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 元/克"
                        android:textColor="@color/chart_orange"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/now_gold_price_text2"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="10dp"
                    android:text="专享金价" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/year_income_text2"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="44dp"
                    android:text="年化返利 " />

                <TextView
                    android:id="@+id/bid_interest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/year_income_text2"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/year_income_text2"
                    android:text="--"
                    android:textColor="@color/chart_orange"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/yellowfanli_l"
                    android:layout_above="@+id/bid_interest2"
                    android:layout_toRightOf="@+id/bid_interest2"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/invest_qixian_text2"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/year_income_text2"
                    android:layout_marginTop="10dp"
                    android:text="投资期限" />

                <TextView
                    android:id="@+id/invest_qixian2"
                    style="@style/text_12sp_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/invest_qixian_text2"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/invest_qixian_text2"
                    android:text="90天" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground" />

    <TextView
        style="@style/text_14sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="15dp"
        android:text="定期金" />

    <View style="@style/bg_line" />

</LinearLayout>