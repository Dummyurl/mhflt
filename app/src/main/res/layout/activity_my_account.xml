<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorStatusRed"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorTextRed"
        android:layout_height="@dimen/action_bar_height">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:id="@+id/iv_back_my_account"
            android:src="@mipmap/ic_left_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="我的账户"
            android:layout_centerVertical="true"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorBackground"/>
        <!--<ImageView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:src="@mipmap/head_img"/>-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/tv_username_my_account"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/colorTextSecondary"/>-->
        


        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_btn_pressed"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:id="@+id/layout_gesture"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_16sp_black"
                android:text="手势密码"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextRed"
                android:id="@+id/tv_status"
                android:text="未开启"
                android:drawableEnd="@mipmap/ic_right_gray"
                android:drawablePadding="15dp"/>
        </LinearLayout>

        <View
            style="@style/bg_line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_btn_pressed"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:id="@+id/layout_change_pwd"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                style="@style/text_16sp_black"
                android:drawableEnd="@mipmap/ic_right_gray"
                android:drawablePadding="15dp"
                android:id="@+id/btn_modify_password_my_account" />
        </LinearLayout>
        <View
            style="@style/bg_line"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_btn_pressed"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:id="@+id/layout_manage_bank_card"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="银行卡管理"
                style="@style/text_16sp_black"
                android:drawableEnd="@mipmap/ic_right_gray"
                android:drawablePadding="15dp"
                android:id="@+id/btn_manage_bank_card" />
        </LinearLayout>
        <View
            style="@style/bg_line"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="退出登录"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_round_rectangle_red_soild"
            android:id="@+id/btn_log_off_my_account" />
    </LinearLayout>
</LinearLayout>