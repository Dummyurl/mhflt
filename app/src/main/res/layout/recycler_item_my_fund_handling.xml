<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_tag_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_fund_handling_tv_fund_name"
                style="@style/text_12sp_gray"
                android:layout_width="150dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                 />

            <TextView
                android:id="@+id/my_fund_handling_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_fund_handling_tv_fund_name"
                android:layout_marginTop="8dp"
                android:text="9000.00"
                android:paddingLeft="40dp"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />

            <TextView
                style="@style/text_12sp_gray2"
                android:id="@+id/my_fund_handling_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_fund_handling_money"
                android:layout_marginTop="8dp"
                android:paddingLeft="40dp"
                android:text="金额(元)" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_fund_handling_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="申购中"
                android:textColor="#5891ec"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_fund_handling_tv_confirm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_fund_handling_tv_state"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:text="2017-03-03"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_fund_handling_tv_confirm_time_is"
                style="@style/text_12sp_gray2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/my_fund_handling_tv_confirm_time"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:text="预计确认时间" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>