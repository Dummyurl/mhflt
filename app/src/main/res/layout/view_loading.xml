<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/progressbar_circle"
        android:background="@drawable/shape_progress_gray"
        android:maxHeight="@dimen/loading_width"
        android:maxWidth="@dimen/loading_width"
        android:minHeight="@dimen/loading_width"
        android:minWidth="@dimen/loading_width"/>

</LinearLayout>