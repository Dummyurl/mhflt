<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="14dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@mipmap/crowd_funding_remain_time"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_latest_repay_date"
            android:textSize="11sp"
            android:textColor="@color/colorTextThird"
            android:layout_marginLeft="7dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_term"
            android:textSize="11sp"
            android:textColor="@color/colorTextThird" />
    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/shape_tag_gray"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            style="@style/text_12sp_gray"
            android:id="@+id/tv_platform_name"
            android:layout_width="200dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_daily_bonus"
            android:layout_width="40dp"
            android:layout_height="17dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text="按日返"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_tag_orange"
            android:textColor="@color/colorTextOrange"/>

        <View
            android:id="@+id/view_line"
            android:layout_below="@+id/tv_platform_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            style="@style/bg_line"/>

        <LinearLayout
            android:layout_below="@+id/view_line"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layout_1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_line_1_1"
                    style="@style/text_14sp_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_line_1_2"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextThird"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layout_2"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv_line_2_1"
                    style="@style/text_14sp_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_line_2_2"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextThird"/>

            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:orientation="vertical"-->
                <!--android:id="@+id/layout_3"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:layout_height="wrap_content">-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/tv_line_3_1"-->
                    <!--style="@style/text_14sp_black"/>-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/tv_line_3_2"-->
                    <!--android:textSize="11sp"-->
                    <!--android:textColor="@color/colorTextThird"/>-->

            <!--</LinearLayout>-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_line_4_1"
                    android:textColor="@color/colorTextRed"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_line_4_2"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextThird"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>