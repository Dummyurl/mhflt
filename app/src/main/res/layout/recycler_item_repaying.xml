<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:id="@+id/layout_root"
    android:layout_marginTop="14dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@mipmap/crowd_funding_remain_time"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_latest_repay_date"
            android:textSize="11sp"
            android:text="最后回款日期:2017-06-28"
            android:textColor="@color/colorTextThird"
            android:layout_marginLeft="7dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_term"
            android:textSize="11sp"
            android:text="第9期/共12期"
            android:textColor="@color/colorTextThird"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/shape_tag_gray">

        <TextView
            android:id="@+id/tv_platform_name"
            style="@style/text_12sp_gray"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:singleLine="true"
            android:text="银豆网|企业借贷-0007(最后一期)" />

        <TextView
            android:id="@+id/tv_daily_bonus"
            android:layout_width="40dp"
            android:layout_height="17dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_tag_orange"
            android:gravity="center"
            android:text="按日返"
            android:textColor="@color/colorTextOrange"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_receivable_principal"
            style="@style/text_14sp_black"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_platform_name"
            android:singleLine="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_principal"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_receivable_principal"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="待收本金(元)"
            android:textColor="@color/colorTextThird"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_receivable_interest"
            style="@style/text_14sp_black"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_platform_name"
            android:layout_marginStart="125dp"
            android:singleLine="true"
            android:layout_marginTop="13dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_receivable_interest_title"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_receivable_interest"
            android:layout_marginLeft="135dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="待收利息(元)"
            android:textColor="@color/colorTextThird"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_payment_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_receivable_interest"
            android:drawableEnd="@mipmap/ic_right_black"
            android:drawablePadding="6dp"
            android:paddingEnd="12dp"
            android:text="回款计划"
            android:textColor="@color/colorTextBlue"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_line"
            style="@style/bg_line"
            android:layout_below="@+id/tv_receivable_interest_title"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_fanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="预计返:202.73元|已返利:202.73元"
            android:textColor="@color/colorBidName"
            android:textSize="11sp" />

    </RelativeLayout>
</LinearLayout>