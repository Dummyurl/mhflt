<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/bg_red_bag_unused"
    android:id="@+id/layout_root_red_bag"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_12sp_gray"
        android:id="@+id/tv_bag_type"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:text="新手红包"
        android:layout_alignEnd="@+id/iv_line" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBidName"
        android:padding="2dp"
        android:id="@+id/tv_bag_num"
        android:gravity="center"
        android:layout_marginTop="21dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_bag_type"
        android:text="¥ 5"
        android:layout_alignEnd="@+id/iv_line" />

    <TextView
        android:layout_alignStart="@+id/iv_line"
        android:layout_alignParentEnd="true"
        android:text="·首次投资≥1000元产品"
        android:textSize="10sp"
        android:textColor="@color/colorBidName"
        android:id="@+id/tv_tztj"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingEnd="4dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignStart="@+id/iv_line"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_bag_num"
        android:text=" 有效期45天"
        android:textSize="10sp"
        android:textColor="@color/colorBidName"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="12dp"
        android:singleLine="true"
        android:id="@+id/tv_data"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_is_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="10dp"
        android:textColor="@color/colorTextRed"
        android:background="@mipmap/bg_unused"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="10dp"
        android:text="未使用" />
</RelativeLayout>