<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/aaa_current_img1"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="100dp">
    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="2px"
            android:layout_alignTop="@+id/interest"
            android:layout_alignBottom="@+id/tv_dsfe"
            android:layout_height="match_parent"
            android:id="@+id/view_line"
            android:layout_marginStart="10dp"
            android:background="#ebebeb"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_bid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/view_line"
            style="@style/text_12sp_black"
            android:text="星火X50"
            android:singleLine="true"
            android:layout_marginTop="18dp"/>
        <TextView
            android:id="@+id/tv_dsfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            style="@style/text_10sp_gray"
            android:text="星火X50星火"
            android:singleLine="true"
            android:layout_toStartOf="@+id/view_line"
            android:layout_below="@+id/interest"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/interest"
            android:layout_toEndOf="@+id/view_line"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextRed"
                android:textSize="16sp"
                android:text="8.62"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%  +  "
                android:textSize="10sp"
                android:id="@+id/tv_num2"
                android:textColor="@color/colorTextRed"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_num3"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@color/colorTextRed"
                android:layout_toEndOf="@+id/tv_num2"
                android:layout_alignBottom="@+id/tv_num1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_num4"
                android:text="%"
                android:textSize="10sp"
                android:layout_marginBottom="-2dp"
                android:textColor="@color/colorTextRed"
                android:layout_toEndOf="@+id/tv_num3"
                android:layout_alignBottom="@+id/tv_num1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/interest"
            android:layout_toEndOf="@+id/view_line"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_10sp_gray2"
                android:text="年化收益"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返利"
                style="@style/text_10sp_gray2"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/tv_num2"
                android:layout_alignBottom="@+id/tv_num1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>