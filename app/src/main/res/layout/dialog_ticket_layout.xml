<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/shape_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_title_dialog"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="加息券选择"
            android:layout_centerInParent="true"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/close_dialog"
            android:clickable="true"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/close_white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <com.changju.fanlitou.ui.WheelView
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loop_view" />


    <View
        style="@style/bg_line" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/positiveButton"
            android:textColor="@android:color/white"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_round_rectangle_red_soild"
            android:gravity="center"
            android:text="@string/btn_ok" />

        <Button
            android:id="@+id/nativeButton"
            android:textColor="@android:color/white"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:background="@drawable/shape_tag_blue_soild"
            android:gravity="center"
            android:text="@string/btn_cancel" />
    </LinearLayout>
</LinearLayout>