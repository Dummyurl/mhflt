<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="400dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/text_16sp_black"
            android:text="开户地区"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/close_black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/iv_close"
            android:background="@drawable/selector_btn_pressed"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View style="@style/bg_line"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/tab_dialog_add_bank_info"
        app:tabSelectedTextColor="@color/colorTextRed"
        app:tabTextColor="@color/colorTextSecondary"
        app:tabGravity="fill"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="@color/colorTextRed"
        app:tabMode="scrollable"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="46dp">

    </android.support.design.widget.TabLayout>
    <View style="@style/bg_line"/>
    <com.changju.fanlitou.ui.NoScrollViewPager
        android:id="@+id/view_pager_dialog_add_bank_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.changju.fanlitou.ui.NoScrollViewPager>

</LinearLayout>