<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="39dp"
    android:layout_marginBottom="1dp"
    android:paddingTop="2dp"
    android:background="@drawable/bg_title_bar_line"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_new_user"
        style="@style/text_12sp_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="新手标" />

    <RelativeLayout
        android:id="@+id/layout_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_income"
            style="@style/text_12sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="收益" />

        <ImageView
            android:id="@+id/iv_income"
            android:layout_width="6dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_income"
            android:src="@mipmap/order" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_duration"
            style="@style/text_12sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="期限" />

        <ImageView
            android:id="@+id/iv_duration"
            android:layout_width="6dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_duration"
            android:src="@mipmap/order" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_filter_discover"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:padding="12dp"
        android:src="@mipmap/filter" />
</LinearLayout>