<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="11dp"
              android:layout_marginRight="11dp"
              android:layout_marginBottom="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@mipmap/crowd_funding_remain_time"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_latest_repay_date"
            android:textSize="11sp"
            android:text="回款日期:2017-06-28"
            android:textColor="@color/colorTextThird"
            android:layout_marginLeft="7dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_term"
            android:textSize="11sp"
            android:text="待回款"
            android:textColor="@color/colorTextRed"/>
    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/shape_tag_gray"
        android:layout_marginTop="13dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/text_14sp_black"
            android:text="4000"
            android:layout_marginTop="13dp"
            android:id="@+id/tv_receivable_principal"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tv_receivable_interest_title" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextThird"
            android:layout_below="@+id/tv_receivable_principal"
            android:textSize="11sp"
            android:layout_marginTop="14dp"
            android:text="回款本金(元)"
            android:layout_toStartOf="@+id/tv_receivable_interest_title"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_14sp_black"
            android:gravity="center"
            android:text="5000"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_receivable_interest"
            android:layout_marginTop="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextThird"
            android:layout_below="@+id/tv_receivable_interest"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_marginTop="14dp"
            android:id="@+id/tv_receivable_interest_title"
            android:text="回款利息(元)"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:id="@+id/layout_dqhkq"
            android:layout_toEndOf="@+id/tv_receivable_interest_title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_14sp_black"
                android:gravity="center"
                android:text="5/5"
                android:drawablePadding="3dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_dqhkq"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_dqhkq"
                android:paddingStart="3dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/tv_dqhkq"
                android:src="@mipmap/ic_question_gray"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextThird"
            android:layout_below="@+id/tv_receivable_interest"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_marginTop="14dp"
            android:id="@+id/tv_dqhkq_cn"
            android:text="当前回款期"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/tv_receivable_interest_title"/>


    </RelativeLayout>
</LinearLayout>