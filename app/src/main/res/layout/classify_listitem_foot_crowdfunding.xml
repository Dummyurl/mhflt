<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_btn_pressed"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/crowdfunding_list_more_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/crowdfunding_list_more"
            android:textSize="12sp"
            android:textColor="@color/chart_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="更多" />

        <ImageView
            android:id="@+id/crowdfunding_list_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/crowdfunding_list_more"
            android:src="@mipmap/ic_down_blue" />

    </RelativeLayout>

</LinearLayout>