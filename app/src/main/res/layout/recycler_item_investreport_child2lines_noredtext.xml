<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/selector_btn_pressed"
                android:clickable="true">

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textColor="@color/colorTextOrange"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/start_date"
        style="@style/text_12sp_gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/order_number"
        android:text="2011-11-11"/>

    <TextView
        android:id="@+id/bid_name"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/t5"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_date"
        android:layout_alignStart="@+id/start_date"
        android:layout_below="@id/start_date"
        android:layout_marginTop="12dp"
        android:text="多彩投的标"/>

    <TextView
        android:id="@+id/receiving_interest"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/start_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="200"/>

    <TextView
        android:id="@+id/waiting_interest"
        style="@style/text_12sp_gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/start_date"
        android:layout_toLeftOf="@id/receiving_interest"
        android:text="待收利息 "/>

    <TextView
        android:id="@+id/receiving_principal"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bid_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="200,00"/>

    <TextView
        android:id="@+id/t5"
        style="@style/text_12sp_gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bid_name"
        android:layout_toLeftOf="@id/receiving_principal"
        android:text="待收本金 "/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@mipmap/arrow_right"/>

    <View
        style="@style/bg_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>