<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/shape_search_background"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:id="@+id/layout_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@mipmap/close_black"
        android:id="@+id/iv_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="14sp"
        android:id="@+id/tv_title"
        android:text="正在为您生成宜贷网账号"
        android:textColor="@color/colorTextBlue"/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/iv_logo"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tv_content"
        android:text="正在XXXXXXX"
        android:lineSpacingExtra="10dp"
        style="@style/text_12sp_black"
        android:layout_below="@+id/iv_logo" />

    <FrameLayout
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/button_layout"
            android:gravity="center"
            android:layout_gravity="top"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/positiveButton"
                android:textColor="@android:color/white"
                android:layout_width="52dp"
                android:layout_height="34dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/shape_round_rectangle_red_soild"
                android:gravity="center"
                android:text="注册" />
            <TextView
                android:id="@+id/nativeButton"
                android:textColor="@android:color/white"
                android:layout_width="52dp"
                android:layout_height="34dp"
                android:background="@drawable/shape_round_rectangle_gray"
                android:gravity="center"
                android:text="@string/btn_cancel" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_button_content"
            android:gravity="center"
            android:textSize="12sp"
            android:text="正在加载中"
            android:textColor="@android:color/white"
            android:background="@color/colorTextBlue"/>
    </FrameLayout>

</RelativeLayout>