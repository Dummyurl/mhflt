<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/withdraw_bg_no_bank_height"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:textColor="#d3d3d3"
        android:gravity="center"
        android:text="暂未绑卡"
        android:textStyle="bold"
        android:background="@drawable/shape_bg_no_bank_card"/>
    <TextView
        style="@style/text_12sp_gray"
        android:id="@+id/tv_content"
        android:text="您尚未绑定银行卡，无法提现"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/shape_round_rectangle_red_soild"
        android:text="去添加"
        android:id="@+id/btn_add_bank_card"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>