<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorStatusRed"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorTextRed"
        android:layout_height="@dimen/action_bar_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:id="@+id/iv_back_my_account"
            android:src="@mipmap/ic_left_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="验证登录密码"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_centerVertical="true"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorBackground"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_14sp_black"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="为了保证您的账户安全，请输入登录密码"/>
        <View
            style="@style/bg_line"/>

        <com.changju.fanlitou.ui.EditTextWithDel
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:maxLength="12"
            android:hint="请输入您的登录密码"
            android:id="@+id/et_pwd"
            android:background="@drawable/bg_title_bar_line"
            android:inputType="textPassword"
            style="@style/text_14sp_black"
            android:textColorHint="@color/colorTextThird"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_btn_unanble"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:id="@+id/btn_next"
            android:text="下一步"
            android:enabled="false"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:gravity="center"
            />
    </LinearLayout>



</LinearLayout>