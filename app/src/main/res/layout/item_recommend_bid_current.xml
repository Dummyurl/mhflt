<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/layout_root"
    android:background="@drawable/selector_btn_pressed"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/four_favorite_margin"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <TextView
            android:id="@+id/platform_bid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_12sp_gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorProgressBlue"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="活期"
            android:layout_marginLeft="12dp"
            android:background="@drawable/current_text_bg"
            android:textSize="12sp">

        </TextView>>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="11"
                    android:textColor="@color/colorTextRed"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/year_income"
                    android:text="%  +  "
                    android:textColor="@color/colorTextRed"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bonus_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/plus"
                    android:text="1"
                    android:textColor="@color/colorTextRed"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/colorTextRed"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/year_more_income"
                    android:layout_toEndOf="@+id/year_more_income" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/year_income_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:text="年化收益"
                    android:textColor="@color/colorTextThird"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/plus_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/year_income_text"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/year_more_income_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/plus_text"
                    android:text="年化返利"
                    android:textColor="@color/colorTextThird"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

             <TextView
                 android:id="@+id/remain_shares"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="150,000,03"
                 android:textColor="@color/colorTextRed"
                 android:textSize="18sp"
                 android:layout_margin="5dp"/>

             <TextView
                 android:id="@+id/number_for_sale_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="待售份额"
                 android:textColor="@color/colorTextThird"
                 android:textSize="12sp"
                 android:layout_margin="2dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>