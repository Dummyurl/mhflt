<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_money_detail_time"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="2016-07-29" />

    <TextView
        android:id="@+id/tv_money_detail_status"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_desc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:text="提现成功" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_money_detail_time"
        android:layout_margin="14dp"
        android:src="@mipmap/aaa_moneydetail" />

    <TextView
        android:id="@+id/yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@id/img"
        android:text="+1111.11元"
        android:textColor="@color/progress_red"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yue"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/yue"
        android:text="(可用余额：12345元)"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/text_12sp_gray2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/yue"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/img"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="转入状态" />

    <View
        style="@style/bg_line"
        android:layout_alignLeft="@+id/img"
        android:layout_alignParentBottom="true" />
</RelativeLayout>