<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_tag_gray"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_12sp_gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="111" />

    <TextView
        android:id="@+id/tv_clear_time"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="预计2017.05.04清算"
        android:textSize="11sp" />

    <View
        android:id="@+id/line"
        style="@style/bg_line"
        android:layout_below="@+id/tv_time"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/platform_list_logo_app"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/platform_name"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/platform_list_logo_app"
        android:layout_below="@+id/line"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/platform_list_logo_app"
        android:layout_toStartOf="@+id/line_vertical"
        android:gravity="start|center"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:text="加载中" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_12sp_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/platform_list_logo_app"
        android:layout_below="@+id/platform_list_logo_app"
        android:layout_marginTop="15dp"
        android:text="加载中" />

    <View
        android:id="@+id/line_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true" />

    <!--<View-->
    <!--android:layout_width="1px"-->
    <!--android:layout_height="66dp"-->
    <!--android:layout_below="@+id/line"-->
    <!--android:background="@color/colorLine"-->
    <!--android:layout_toStartOf="@+id/tv_principal"/>-->

    <TextView
        android:id="@+id/tv_principal"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/line_vertical"
        android:background="@drawable/bg_left_line"
        android:paddingStart="10dp"
        android:text="本金(元)：1111111" />

    <TextView
        android:id="@+id/tv_text_line2"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_principal"
        android:layout_toEndOf="@+id/line_vertical"
        android:background="@drawable/bg_left_line"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="本金(元)：1111111" />

    <TextView
        android:id="@+id/tv_text_line3"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_line2"
        android:layout_toEndOf="@+id/line_vertical"
        android:background="@drawable/bg_left_line"
        android:drawableEnd="@mipmap/ic_question_gray"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="返利(元)：11111" />


    <TextView
        android:id="@+id/raise_interest_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_text_line3"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/tv_text_line3"
        android:background="@drawable/shape_tag_red"
        android:paddingBottom="1dp"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="加息券"
        android:textColor="@color/colorTextRed"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_text_line4"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_line3"
        android:layout_toEndOf="@+id/line_vertical"
        android:background="@drawable/bg_left_line"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="本金(元)：1111111" />

    <TextView
        android:id="@+id/tv_text_line5"
        style="@style/text_12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_line4"
        android:layout_toEndOf="@+id/line_vertical"
        android:background="@drawable/bg_left_line"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="红包(元)：1111111" />

</RelativeLayout>